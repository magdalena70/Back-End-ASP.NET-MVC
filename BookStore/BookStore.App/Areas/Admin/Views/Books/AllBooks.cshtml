@model IEnumerable<BookStore.Models.ViewModels.Book.AllBooksViewModel>

@{
    ViewBag.Title = "All Books";
}

<div class="row">
    <div class="col-md-10 col-md-offset-1">
        <h2>@ViewBag.Title</h2>
    </div>
</div>
<hr />
<div class="row">
    <div class="col-lg-10 col-md-offset-1">
        <ul class="pagination">
            @for (int page = 1; page <= ViewBag.Totalpages; page++)
            {
                string htmlClass = "";
                if (page == ViewBag.CurrentPage)
                {
                    htmlClass = "active";
                }

                <li class="@htmlClass">
                    @Html.ActionLink(page.ToString(), "AllBooks", "Books", new { page = page, count = 6 }, null)
            </li>
            }
        </ul>
    </div>
</div>
<hr>
<div class="row">
    <div class="col-md-10 col-md-offset-1">
       @foreach (var book in Model)
       {
        <div class="col-md-4">
            <p><strong>Title -</strong></p>
            <p>@Html.DisplayFor(b => book.Title)</p>
        </div>
        <div class="col-md-3">
            <p><strong>Authors -</strong></p>
            <p>@Html.DisplayFor(b => book.Authors)</p>
        </div>
        <div class="col-md-3">
            <p><strong>ISBN -</strong></p>
            @Html.DisplayFor(b => book.ISBN)
        </div>
        <div class="col-md-2">
            <p>@Html.ActionLink("Edit", "Edit", new { id = book.Id })</p>
           <p>@Html.ActionLink("Details", "Details", new { id = book.Id })</p>
            <p>@Html.ActionLink("Delete", "Delete", new { id = book.Id })</p>
        </div>
       }
    </div>
</div>
