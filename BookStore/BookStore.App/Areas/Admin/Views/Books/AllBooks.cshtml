@model IEnumerable<BookStore.Models.EntityModels.Book>

@{
    ViewBag.Title = "All Books";
}

<div class="row">
    <div class="col-md-10 col-md-offset-1">
        <h2>@ViewBag.Title</h2>
    </div>
</div>

<p>
    @Html.ActionLink("Add Book", "AddBook")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Language)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Quantity)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NumberOfPages)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IssueDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ISBN)
        </th>
        <th></th>
    </tr>

@foreach (var book in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => book.Title)
        </td>
        <td>
            @Html.DisplayFor(modelItem => book.Language)
        </td>
        <td>
            @Html.DisplayFor(modelItem => book.Quantity)
        </td>
        <td>
            @Html.DisplayFor(modelItem => book.NumberOfPages)
        </td>
        <td>
            @Html.DisplayFor(modelItem => book.IssueDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => book.ISBN)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id= book.Id }) |
            @Html.ActionLink("Details", "Details", new { id= book.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id= book.Id })
        </td>
    </tr>
}

</table>
