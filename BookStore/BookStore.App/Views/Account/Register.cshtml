@model BookStore.App.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
}
<div class="row text-center">
    <h2>Register as a new user</h2>
</div>
<hr />
<section id="register-form">
    @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        @Html.AntiForgeryToken()
        <h4>Create a new account:</h4>
        @Html.ValidationSummary("", new { @class = "text-danger" })
        <div class="col-md-3 col-md-offset-2">
            <div class="form-group">
                @Html.LabelFor(user => user.UserName, new { @class = "control-label" })
                <div>
                    @Html.TextBoxFor(user => user.UserName, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(user => user.Email, new { @class = "control-label" })
                <div>
                    @Html.TextBoxFor(user => user.Email, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(user => user.FirstName, new { @class = "control-label" })
                <div>
                    @Html.TextBoxFor(user => user.FirstName, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(user => user.LastName, new { @class = "control-label" })
                <div>
                    @Html.TextBoxFor(user => user.LastName, new { @class = "form-control" })
                </div>
            </div>
        </div>

        <div class="col-md-3 col-md-offset-1">
            <div class="form-group">
                @Html.LabelFor(user => user.Address, new { @class = "control-label" })
                <div>
                    @Html.TextBoxFor(user => user.Address, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(user => user.PhoneNumber, new { @class = "control-label" })
                <div>
                    @Html.TextBoxFor(user => user.PhoneNumber, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(user => user.Password, new { @class = "control-label" })
                <div>
                    @Html.PasswordFor(user => user.Password, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(user => user.ConfirmPassword, new { @class = "control-label" })
                <div>
                    @Html.PasswordFor(user => user.ConfirmPassword, new { @class = "form-control" })
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-8 text-center">
                <input type="submit" class="btn btn-default" value="Register" />
            </div>
        </div>
    }
</section>