@model BookStore.Models.Author

@{
    ViewBag.Title = "Books By Author";
}

@if (@Model != null)
{
    <div class="row">
        <h2>Books By Author</h2>
    </div>
    <hr />
    <div class="row">
        <div class="col-md-10 col-md-offset-1">
            <h3 class="text-center">@Html.DisplayFor(model => model.FullName)</h3>
            <h4>Bio:</h4>
            <p>@Html.DisplayFor(model => model.Bio)</p>
        </div>     
    </div>
    <div class="row">
        <h4>Books:</h4>
        @foreach (var book in Model.Books)
        {
            <div class="col-md-4 books-list">
                <div class="row text-center books-list-title">
                    <h4>@Html.DisplayFor(modelItem => book.Title)</h4>
                </div>
                <div class="row">
                    <div class="col-md-4">
                        <a href="/Books/Details/@book.Id"><img src="@book.ImageUrl" alt="tweet" class="img-thumbnail" /></a>
                    </div>
                    <div class="col-md-8">
                        <p>Lang - @Html.DisplayFor(modelItem => book.Language)</p>
                        <p>Price: @Html.DisplayFor(modelItem => book.Price)lv.</p>
                    </div>
                </div>
                <hr />
                <div class="row">
                    <div class="col-md-6">
                        @Html.ActionLink("Add To Basket", "Details", "Books", new {id = book.Id }, new { @class = "btn btn-default" })
                    </div>
                    @*@Html.ActionLink("Edit", "Edit", new { id = item.Id })*@
                    <div class="col-md-6">
                        <a href="Details/@book.Id" class="btn btn-default">See more &raquo;</a>
                    </div>
                </div>
            </div>
        }
    </div>
    <hr />
    <div class="row">
        @*@Html.ActionLink("Edit", "Edit", new { id = Model.Id }) |*@
        @Html.ActionLink("Back to All Authors", "Index", "Authors")
    </div>
}

