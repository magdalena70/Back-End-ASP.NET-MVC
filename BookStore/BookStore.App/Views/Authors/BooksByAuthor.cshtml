@model BookStore.Models.ViewModels.AuthorWithBooksViewModel

@{
    ViewBag.Title = "Books By Author";
}
<div class="row text-center">
    <div class="col-lg-8 col-md-offset-2">
        @Html.ActionLink("See All Authors", "All", "Authors", null, new { @class = "btn btn-default btn-block" })
    </div>
</div>
<hr />
@if (@Model != null)
{
    <div class="row text-center">
        <div class="col-md-10 col-md-offset-1">
            <h2>@ViewBag.Title</h2>
        </div>
    </div>
    <div class="row">
        <div class="col-md-10 col-md-offset-1">
            <h3 class="text-center">@Html.DisplayFor(model => model.FullName)</h3>
        </div>
    </div>
    <hr />
    <div class="row">
        @Html.Partial("_AuthorBooksViewPartial")      
    </div>   
    <hr />
}

