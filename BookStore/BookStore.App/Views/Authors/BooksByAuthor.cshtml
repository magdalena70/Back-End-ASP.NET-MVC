@model BookStore.Models.ViewModels.AuthorWithBooksViewModel

@{
    ViewBag.Title = "Books By Author";
}

@if (@Model != null)
{
    <div class="row text-center">
        <div class="col-md-10 col-md-offset-1">
            <h2>@ViewBag.Title</h2>
        </div>
    </div>
    <hr />
    <div class="row">
        <div class="col-md-10 col-md-offset-1 author-div">
            <h3 class="text-center">@Html.DisplayFor(model => model.FullName)</h3>
        </div>
    </div>
    <div class="row">
        <div class="col-md-10 col-md-offset-1 author-div">
            <h4 class="text-center">Books: @Model.Books.Count</h4>
            @foreach (var book in Model.Books)
            {
                <div class="col-md-4 books-list">
                    <div class="row text-center books-list-title">
                        <h4>@Html.DisplayFor(modelItem => book.Title)</h4>
                    </div>
                    <div class="row">
                        <div class="col-md-4">
                            <a href="/Books/Details/@book.Id"><img src="@book.ImageUrl" alt="tweet" class="img-thumbnail" /></a>
                        </div>
                        <div class="col-md-8">
                            <p>Lang - @Html.DisplayFor(modelItem => book.Language)</p>
                            <p>Price: @Html.DisplayFor(modelItem => book.Price)lv.</p>
                            @using (Html.BeginForm("FavoriteBooks", "Users", FormMethod.Post))
                            {
                                @Html.AntiForgeryToken()
                                @Html.HiddenFor(b => book.Id)
                                <div class="form-actions no-color">
                                    <p>
                                        <button type="submit" value="Add to Favorite" class="btn btn-default btn-sm">
                                            <span class="glyphicon glyphicon-heart"></span>
                                        </button>
                                    </p>
                                </div>
                            }
                        </div>
                    </div>
                    <hr />
                    <div class="row">
                        <div class="col-md-6">
                            @using (Html.BeginForm("AddToBasket", "Baskets", FormMethod.Post))
                            {
                                @Html.AntiForgeryToken()
                                @Html.HiddenFor(b => book.Id)
                                <div class="form-actions no-color">
                                    <input type="submit" value="Add To Basket" class="btn btn-default" />
                                </div>
                            }
                        </div>
                        <div class="col-md-6">
                            <p class="btn btn-default">
                                @Html.ActionLink("See more", "Details", "Books", new { id = book.Id }, null)
                                &raquo;
                            </p>
                        </div>
                    </div>

                </div>
            }
        </div>
    </div>   
    <hr />
}
<div class="row text-center">
    <div class="col-lg-8 col-md-offset-2">
        @Html.ActionLink("See All Authors", "All", "Authors", null, new { @class = "btn btn-default btn-block" })
    </div>
</div>

