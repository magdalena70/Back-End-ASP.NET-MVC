@using Microsoft.AspNet.Identity

@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
        @Html.AntiForgeryToken()
        
        <ul class="nav navbar-nav navbar-right">
            <li><h2>@User.Identity.GetUserName()</h2></li>
            <li class="dropdown">
                <a href="#" class="dropdown-toggle btn btn-default" data-toggle="dropdown">
                    <img src="~/Content/Images/user-icon.png" class="img-rounded" alt="authentication" />
                    <b class="caret"></b>
                    <p class="carousel-caption lead">user</p>
                </a>

                <ul class="dropdown-menu">
                    <li>@Html.ActionLink("Profile", "UserProfile", "Users")</li>
                    <li>@Html.ActionLink("Edit Profile", "EditProfile", "Users")</li>
                    <li>@Html.ActionLink("Change Password", "ChangePassword", "Manage")</li>

                    <li class="divider"></li>
                    <li>@Html.ActionLink("Favorite Books", "FavoriteBooks", "Users")</li>
                    <li>@Html.ActionLink("My Basket", "Details", "Baskets")</li>

                    <li class="divider"></li>
                    <li>@Html.ActionLink("Special Offers", "SpecialOffers", "Books")</li>

                </ul>
            </li>
            <li>
                <a href="javascript:document.getElementById('logoutForm').submit()" class="btn btn-default">
                    <img src="~/Content/Images/authentication-key-icon.png" class="img-rounded" alt="authentication" />
                    <p class="carousel-caption lead">log out</p>
                </a>
            </li>
        </ul>
    }
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li class="dropdown">
            <a href="#" class="dropdown-toggle btn btn-default" data-toggle="dropdown">
                <img src="~/Content/Images/authentication-key-icon.png" class="img-rounded" alt="authentication" />
                <b class="caret"></b>
                <p class="carousel-caption lead">log in</p>
            </a>

            <ul class="dropdown-menu">
                <li>@Html.ActionLink("Register", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink" })</li>
                <li class="divider"></li>
                <li>@Html.ActionLink("Log in", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>
            </ul>
        </li>
    </ul>
}
