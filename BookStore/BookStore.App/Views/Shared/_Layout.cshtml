<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Book Store Anglerfish</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="container-fluid" id="top">
        <div class="row text-center home">
            <h1>Book Store <span id="book-store-title">Anglerfish</span></h1>
            <p class="lead">There is a light in the darkness.</p>
            <p class="lead">Some creatures glow, while others simply float downstream.</p>
        </div>
    </div>
    <nav class="navbar navbar-inverse" data-spy="affix" data-offset-top="197">
        <div class="container">

            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <ul class="nav navbar-nav">
                    @if (User.IsInRole("Admin"))
                    {
                        <li class="navbar-brand btn btn-default lead">
                            @Html.ActionLink("Admin panel", "AllCategories", "Categories", new { area = "Admin" }, new { @class = "navbar-brand btn btn-default" })
                        </li>
                    }
                    <li>
                        <a href="/Home/Index" class="navbar-brand btn btn-default">
                            <img src="~/Content/Images/home-icon.png" class="img-rounded" alt="home-icon" />
                            <p class="carousel-caption">home</p>
                        </a>
                    </li>
                </ul>
            </div>

            <div class="navbar-collapse collapse">
                @Html.Partial("_NavbarDropdawnSearchPartial")
                @Html.Partial("_NavbarDropdownMenuPartial")
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </nav>

    <div class="container-fluid body-content">
        @Html.Partial("_BackNextTopButtonsPartial")
        @Html.Partial("_MessagesPartial")
        @RenderBody()
        <hr />
        @Html.Partial("_Footer")
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
