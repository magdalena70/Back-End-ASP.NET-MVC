@model BookStore.Models.ViewModels.BasketViewModel

@{
    ViewBag.Title = "Basket";
}

<div class="row text-center">
    <div class="col-md-10 col-md-offset-1 book-div">
        <h3>My Basket</h3>
        <hr />
        <h2>Current Price: @Model.TotalPrice BGN</h2>
        <h4>Discount: @string.Format("{0:0.00}", Model.Discount) %</h4>
        <h5 id="you-will-save">You will save @string.Format("{0:0.00}", ((Model.TotalPrice * Model.Discount) / 100)) BGN</h5>
        <h2 id="basket-total-price">Total Price: @string.Format("{0:0.00}", (Model.TotalPrice - ((Model.TotalPrice * Model.Discount) / 100))) BGN</h2>
    </div>
</div>
<hr />
@if (@Model != null)
{
    <div class="row">
        <div class="col-md-10 col-md-offset-1 book-div">
            @foreach (var book in Model.Count)
                {
                <div class="col-md-4 books-list">
                    <div class="row text-center books-list-title">
                        <h4>@Html.DisplayFor(b => book.Book.Title)</h4>
                    </div>
                    <div class="row">
                        <div class="col-md-4">
                            <a href="/Books/Details/@book.Book.Id" title="See Book's Details">
                                <img src="@book.Book.ImageUrl" alt="book-img" class="img-thumbnail" />
                            </a>
                        </div>
                        <div class="col-md-8">
                            <p>
                                <small>by </small>
                                @foreach (var author in book.Book.Authors)
                                {
                                    <span class="text-center">
                                        @Html.ActionLink(author.FullName, "BooksByAuthor", "Authors", new { authorName = author.FullName }, null)
                                    </span>
                                }
                            </p>
                            <p><small>Lang</small> - <strong>@Html.DisplayFor(b => book.Book.Language)</strong></p>
                            <p><small>Price</small> - <strong>@Html.DisplayFor(b => book.Book.Price) BGN</strong></p>
                            <p><small>Quantity In Basket</small> - @book.Count</p>
                        </div>
                    </div>
                    <hr />
                    <div class="row">
                        <div class="col-md-6">
                            @using (Html.BeginForm("RemoveFromBasket", "Baskets", FormMethod.Post))
                            {
                                @Html.AntiForgeryToken()
                                @Html.HiddenFor(b => book.BookId)
                                <div class="form-actions no-color">
                                    <input type="submit" value="RemoveFromBasket" class="btn btn-default" />
                                </div>
                            }
                        </div>
                        <div class="col-md-6">
                            <p class="btn btn-default">
                                @Html.ActionLink("See more", "Details", "Books", new { id = book.Book.Id }, null)
                                &raquo;
                            </p>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
}
<hr />
<div class="row">
    <div class="col-md-10 col-md-offset-1">
        @Html.ActionLink("Buy", "Buy", "Baskets", new { id = Model.Id }, new { @class = "btn btn-danger btn-block" })
    </div>
</div>