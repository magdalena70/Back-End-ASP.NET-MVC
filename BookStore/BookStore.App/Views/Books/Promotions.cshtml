@using BookStore.Models.ViewModels
@model PromotionsViewModel

@{
    ViewBag.Title = "Promotions";
}

<div class="row text-center">
    <div class="col-md-10 col-md-offset-1">
        <h3>Promotion for all of boobs from year @(DateTime.Now.Year-1) and category '@Model.Category'</h3>
        <hr />
        <h4>Discount: @string.Format("{0:0.00}", Model.Discount) %</h4>
        <h5 class="you-will-save">Start date: @Model.StartDate.ToString("dd-MM-yyyy") - End Date: @Model.EndDate.ToString("dd-MM-yyyy")</h5>
        @Html.ActionLink("New Books", "NewBooks", "Books", null, new { @class = "btn btn-default pull-left" })
        @Html.ActionLink("BestSellers", "BestSellers", "Categories", null, new { @class = "btn btn-default pull-right" })
    </div>
</div>
<hr />
<div class="row">
    <div class="col-md-10 col-md-offset-1">
        @foreach (var book in Model.Books)
        {
            <div class="col-md-4 books-list">
                <div class="row text-center books-list-title">
                    <h4>@Html.DisplayFor(b => book.Title)</h4>
                    <p>from @book.IssueDate.ToString("dd-MM-yyyy")</p>
                </div>
                <div class="row">
                    <div class="col-md-4">
                        <a href="/Books/Details/@book.Id"><img src="@book.ImageUrl" alt="tweet" class="img-thumbnail" /></a>
                    </div>
                    <div class="col-md-8">
                        <p>
                            <span>by </span>
                            @foreach (var author in book.Authors)
                            {
                                <span class="text-center">
                                    @Html.ActionLink(author.FullName, "BooksByAuthor", "Authors", new { authorName = author.FullName })
                                </span>
                            }
                        </p>
                        <p>Lang - @Html.DisplayFor(b => book.Language)</p>
                        <p>In stock - @Html.DisplayFor(b => book.Quantity)</p>
                        <p>Current Price: @Html.DisplayFor(b => book.CurrentPrice) BGN</p>
                        <p>
                            <small class="you-will-save">You will save @string.Format("{0:0.00}", ((book.CurrentPrice * book.Discount) / 100)) BGN</small>
                        </p>
                        <h5>New Price: @Html.DisplayFor(b => book.NewPrice)</h5>
                        @using (Html.BeginForm("FavoriteBooks", "Users", FormMethod.Post))
                        {
                            @Html.AntiForgeryToken()
                            @Html.HiddenFor(b => book.Id)
                            <div class="form-actions no-color">
                                <p>
                                    <button type="submit" value="Add to Favorite" class="btn btn-default btn-sm">
                                        <span class="glyphicon glyphicon-heart"></span>
                                    </button>
                                </p>
                            </div>
                        }
                    </div>
                </div>
                <hr />
                <div class="row">
                    <div class="col-md-6">
                        @using (Html.BeginForm("AddToBasket", "Baskets", FormMethod.Post))
                        {
                            @Html.AntiForgeryToken()
                            @Html.HiddenFor(b => book.Id)
                            <div class="form-actions no-color">
                                <input type="submit" value="Add To Basket" class="btn btn-default" />
                            </div>
                        }
                    </div>
                    <div class="col-md-6">
                        <p class="btn btn-default">
                            @Html.ActionLink("See more", "Details", "Books", new { id = book.Id }, null)
                            &raquo;
                        </p>
                    </div>
                </div> 
            </div>
        }
    </div>
</div>
