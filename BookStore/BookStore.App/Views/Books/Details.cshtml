@model BookStore.Models.ViewModels.Book.BookDetailsViewModel

@{
    ViewBag.Title = "Book's Details";
}

<hr />
<div class="row">
    <div class="col-md-8 col-md-offset-2 book-details-div">
        <div class="row text-center books-list-title">
            <h3>@Html.DisplayFor(book => book.Title)</h3>
        </div>
        <div class="row">
            <div class="col-md-5 img-rounded">
                <img src="@Model.ImageUrl" alt="book-img" class="img img-responsive" width="100%" />
            </div>
            <div class="col-md-7">
                <h4>
                    <span>by </span>
                    @foreach (var author in Model.Authors)
                    {
                        <span class="text-center">
                            @Html.ActionLink(author.FullName, "BooksByAuthor", "Authors", new { authorName = author.FullName }, null)
                        </span>
                    }
                </h4>
                <p>Lang - @Html.DisplayFor(book => book.Language)</p>
                <p>ISBN - @Html.DisplayFor(book => book.ISBN)</p>
                <p>Quantity - @Html.DisplayFor(book => book.Quantity)</p>
                <p>Number Of Pages - @Html.DisplayFor(book => book.NumberOfPages)</p>
                <p>Issue Date - @Html.DisplayFor(book => book.IssueDate)</p>
                <p class="lead">Price: @Html.DisplayFor(book => book.Price)</p>
                <p>
                    <ul>
                        Categories:
                        @foreach (var category in Model.Categories)
                        {
                            <li>@Html.DisplayFor(c => category.Name)</li>
                        }
                    </ul>
                </p>
                <hr />
                <div class="row">
                    <p>
                        <span class="lead add-rating">Rating - @Html.DisplayFor(book => book.Ratings)</span>
                    </p>
                </div>
            </div>
        </div>
        <hr />
        <div class="row">
            <div class="col-md-12">
                <button type="button" class="btn btn-default btn-block" data-toggle="collapse" data-target="#description">
                    <h4>@Html.DisplayNameFor(book => book.Description)</h4>
                    <b class="caret"></b>
                </button>
            </div>
            <div class="col-md-12 collapse" id="description">
                <p>
                    @Html.DisplayFor(book => book.Description)
                </p>
            </div>
        </div>
        <hr />
        <div class="row">
            <button type="button" class="btn btn-default btn-block" data-toggle="collapse" data-target="#reviews-view">
                <h4>Reviews</h4>
                <b class="caret"></b>
            </button>
            <hr />
            <div id="reviews-view">
                <div id="reviews" class="col-md-10 col-md-offset-1 book-div"></div>
                <div class="col-md-6 col-md-offset-3">
                   
                    @using (Ajax.BeginForm("AddReview", "Reviews", new { id = Model.Id }, new AjaxOptions()
                    {
                        HttpMethod = "POST",
                        InsertionMode = InsertionMode.InsertBefore,
                        UpdateTargetId = "reviews",
                        OnSuccess = "OnSuccess"
                    }))
                    {
                        @Html.AntiForgeryToken()
                        <div class="form-horizontal">
                            <div class="form-group">
                                <label for="text" class="control-label">Add Review</label>
                                <input type="text" id="text" name="Text" value="" class="form-control" />
                            </div>

                            <div class="form-group">
                                <input type="submit" value="Add" class="btn btn-default" />
                            </div>
                        </div>
                    }
                </div>
                <div class="col-md-10 col-md-offset-1 book-div">
                    @if (Model.Reviews.Any(r => r.Text != null))
                    {
                        @Html.DisplayFor(b => b.Reviews)
                    }
                    else
                    {
                        <p>No reviews</p>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/Scripts/jquery.unobtrusive-ajax.js"></script>
    <script>
        //ajax
        function OnSuccess() {
            document.getElementById("text").value = '';
        }
    </script>
}