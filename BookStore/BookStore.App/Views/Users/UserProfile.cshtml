@model BookStore.Models.ViewModels.UserProfileViewModel

@{
    ViewBag.Title = "User Profile";
}
<div class="row">
    <div class="col-md-10 col-md-offset-1">
        <p class="pull-right btn btn-default">
            @Html.ActionLink("My " + Model.CountBooksInFavorite + " Favorite", "FavoriteBooks", "Users")
            <span class="glyphicon glyphicon-heart"></span> 
        </p>
        <h2 class="text-center">My Profile</h2>
        <hr />
    </div>
</div>
<div class="row">
    <div class="col-md-10 col-md-offset-1">
        <p class="btn btn-default" title="My Basket">
            <a href="/Baskets/Details">
                <img src="~/Content/Images/empty-shopping-cart-icon.png" alt="user-basket-img" class="img-rounded" />
                @Html.DisplayFor(basket => basket.CountBooksInBasket)
            </a>
        </p>
    </div>
</div>
<hr />
@if (Model.Basket != null)
{
    <div class="row">

        @*user-basket view - carousel*@
        <div class="row">
            <div id="myCarousel" class="carousel slide col-md-10 col-md-offset-1" data-ride="carousel">

                <div class="carousel-inner text-center" role="listbox">
                    @if (Model.CountBooksInBasket > 0)
                    {
                        <div class="item active">
                            <div class="img-box">
                                <h3>@Model.UserName's basket</h3>
                                <p><strong>Total Price: @Model.Basket.TotalPrice BGN</strong></p>
                                <img src="~/Content/Images/user-basket.png" alt="basket-img" class="img-rounded">
                                <div class="carousel-caption">
                                    <p>@Html.ActionLink("Go To Basket", "Details", "Baskets", null, new { @class = "btn btn-default btn-lg" })</p>
                                </div>
                            </div>
                        </div>

                        foreach (var book in Model.Books)
                        {
                            <div class="item">
                                <div class="img-box">
                                    <h3>@Html.DisplayFor(b => book.Book.Title)</h3>
                                    <p><strong>@Html.DisplayFor(b => book.Book.Price) BGN / Count: @book.Count</strong></p>
                                    <img src=@book.Book.ImageUrl alt="basket-book-img">
                                </div>
                            </div>
                        }
                    }
                    else
                    {
                        <div class="img-box">
                            <h3>@Model.UserName's baket</h3>
                            <p><strong>Books:@Model.CountBooksInBasket / Total Price: @Model.BasketTotalPrice BGN</strong></p>
                            <img src="~/Content/Images/user-basket.png" alt="basket-img" class="img-rounded">
                            <div class="carousel-caption">
                                <h1>Basket is empty.</h1>
                            </div>
                        </div>
                    }
                </div>

                <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
                    <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
                    <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
        </div>
    </div>
    <hr />
    <div class="row category-div">
        <div class="col-md-10 col-md-offset-1">
            <h2>You may also like some book from the next categories:</h2>
            <hr />
            @if (Model.YouMayAlsoLike != null)
            {
                foreach (var category in Model.YouMayAlsoLike)
                {
                    <div class="col-md-3">
                        <p class="lead">
                            @Html.ActionLink(category.Name, "BooksByCategory", "Categories", new { categoryName = category.Name }, null)
                            &raquo;
                        </p>
                    </div>
                }
            }
        </div>
    </div>
}
