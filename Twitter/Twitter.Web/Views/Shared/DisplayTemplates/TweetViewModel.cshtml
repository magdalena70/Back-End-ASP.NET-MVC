@model Twitter.Web.ViewModels.TweetViewModel

<div class="col-sm-4">
    <h4>@Model.Title</h4>
    <p>@Model.Details</p>
    <em>@Model.SentToDate by @Model.Author</em>
    <img src="@Model.ImageUrl" alt="@Model.Title img" width="250" height="200" />
    <p>Category: @Model.CategoryName</p>
    <div id="likes-@Model.Id" class="well">
        <span>Count: @Html.DisplayFor(f => f.FavoriteCount)</span>
        <span>Fans: @Html.DisplayFor(f => f.Fans)</span>
    </div>
</div>