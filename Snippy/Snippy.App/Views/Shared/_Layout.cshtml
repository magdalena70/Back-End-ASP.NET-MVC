<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>
    <script src="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js"></script>
    <title>@ViewBag.Title - Snippy</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @if (this.User.Identity.IsAuthenticated)
                {
                    @Html.ActionLink("Profile", "UserDetails/"+this.User.Identity.Name, "Users", new { area = "" }, new { @class = "navbar-brand" })
                }
                </div>
                    <div class="navbar-collapse collapse">
                        <ul class="nav navbar-nav">
                            <li>@Html.ActionLink("Home", "Index", "Home")</li>
                            @if (this.User.Identity.IsAuthenticated)
                    {
                                <li>@Html.ActionLink("All Snippets", "Index", "Snippets")</li>
                                <li>@Html.ActionLink("All Users", "Index", "Users")</li>
                    }
                        </ul>
                        @Html.Partial("_LoginPartial")
                    </div>

                </div>
            </div>
                    <div class="container body-content">
                        @Html.Partial("_MessagesPartial")
                        @RenderBody()
                        <hr />
                        <footer>
                            <p>&copy; @DateTime.Now.Year - Snippy</p>
                        </footer>
                    </div>

    <script>

        $(document).ready(function () {
        $('#delete').tooltip(
            {
                title: "Delete Comment",
                placement: "right"
            });

        $('#edit').tooltip(
        {
            title: "Edit comment",
            placement: "left"
        });


        /*$('[data-toggle="tooltip"]').tooltip(
            {
                title: "<h1><strong>Hello!</strong> Follow <code>me</code> <em>and my <code>tweets</code></em>.</h1>",
                html: true,
                placement: "bottom",
                //trigger: 'click'
            });*/
    });

    </script>

                    @Scripts.Render("~/bundles/jquery")
                    @Scripts.Render("~/bundles/bootstrap")
                    @RenderSection("scripts", required: false)
                </body>
</html>
