@using System.Globalization
@model Snippy.App.Models.ViewModels.SnippetDetailsToDeleteViewModel

@{
    ViewBag.Title = "SnippetDetailsToDelete";
}

<h1 style="color: red;">Do you whont to remove this snippet:</h1>
<h2>Snippet details to delete:</h2>
<div class="row well">
    <h3>@WebUtility.HtmlDecode(@Model.Title)</h3>
    <p>posted in programming language: <strong>@WebUtility.HtmlDecode(@Model.Language)</strong></p>
    <p>
        <em>
            by <strong>@Model.Author</strong>
            on @Model.CreationTime.ToString("dd-MMM-yyyy hh:mm:ss", CultureInfo.InvariantCulture)
        </em>
    </p>
    <p>@WebUtility.HtmlDecode(@Model.Description)</p>
    <div class="well col-sm-10 col-sm-offset-1">
        <pre style="width:400px; margin: auto;">
        <code>@WebUtility.HtmlDecode(@Model.Code)</code>
        </pre>
    </div>
</div>
<div class="row well">
    <p>with comments count: <strong>@Model.Comments.Count()</strong></p>
</div>
<div class="row">
    @Html.ActionLink("Delete", "DeleteSnippet", "Snippets", new { snippetId = @Model.Id }, new { @class = "btn btn-danger" })
    @Html.ActionLink("Cancel", "SnippetDetails", "Snippets", new { snippetId = @Model.Id }, new { @class = "btn btn-default" })
</div>
