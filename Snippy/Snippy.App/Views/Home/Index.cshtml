@model Snippy.App.Models.ViewModels.HomePageViewModel
@{
    ViewBag.Title = "Home Page";
}

<div class="row well">
    <div id="slideImage" style="width: 100%; height: 170px;"></div>
    <h1>Snippy</h1>
</div>

<div id="dialog" title="Basic dialog">
    <p>This is the default dialog which is useful for displaying information. The dialog window can be moved, resized and closed with the 'x' icon.</p>
</div>

<div class="row">
    <div class="col-md-5">
        <h2>Latest Snippets</h2>
         @Html.DisplayFor(s => s.FiveLatestSnippets)
    </div>  
    <div class="col-md-4">
        <h2>latest Comments</h2>       
        @Html.DisplayFor(s => s.FiveLatestComments)
        
    </div>
    <div class="col-sm-2">
        <h2>Best Labels</h2>
        <div class="panel panel-primary">
            <div class="panel-body">
                @Html.DisplayFor(s => s.FiveBestLabels)
            </div>
        </div>
    </div>
</div>

@section scripts{
    <script type="text/javascript">
        $(window).load(function () {
            var i = 0;
            var images = ['https://encrypted-tbn2.gstatic.com/images?q=tbn:ANd9GcSPvPQBolzr1IDnJ8nWHeCunOVZ-Giwg80nG-b3zHewTN0E_jk7',
                'https://encrypted-tbn2.gstatic.com/images?q=tbn:ANd9GcRdP2-cdQ0Os7HQtUQTOOlZ_9c5lwZNI0kSzlujZg-dWqxZBJsN',
                'https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcRKMgIrQ-8ifAtaa3s9Y9nunN6gDcCLEmpNEOvEvH-AqvkBmsLY'];
            var image = $('#slideImage');

            image.css('background-image',
                'url(https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcRKMgIrQ-8ifAtaa3s9Y9nunN6gDcCLEmpNEOvEvH-AqvkBmsLY)');

            setInterval(function () {
                image.fadeOut(1000, function () {
                    image.css('background-image', 'url(' + images[i++] + ')');
                    image.fadeIn(1000);
                });

                if (i == images.length)
                    i = 0;
            }, 5000);
        });
    </script>
}