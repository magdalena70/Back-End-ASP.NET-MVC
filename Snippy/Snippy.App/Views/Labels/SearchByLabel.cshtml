@model IEnumerable<Snippy.Models.Label>

@{
    ViewBag.Title = "SearchSnippetByLabel";
}

<h2>Search Snippet By Label</h2>
<div class="row">
    <div class="col-sm-8">
        <div class="panel panel-primary">
            <div class="panel-heading">
                @using (Html.BeginForm("SearchByLabel", "Labels", FormMethod.Get, null))
                {
                    <p>
                        <label>Search Label:</label>
                        @Html.TextBox("SearchString", null, null, new { @class = "form-control", placeholder = "input string" })
                        <input type="submit" value="Filter" class="btn btn-default" />
                    </p>
                }
            </div>
            <div class="panel-body">
                <table class="table table-bordered table-hover">
                    <thead>
                        <tr>
                            <th>Text</th>
                            <th><span class="glyphicon glyphicon-search"></span></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var label in Model)
                        {
                            <tr>
                                <td>@label.Text</td>
                                <td>
                                    @Html.ActionLink("Search Snippet", "SnippetsByLabel", "Labels", new { id = @label.Id }, new { @class = "btn btn-default" })
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <div class="col-sm-4">
        <div class="panel panel-primary">
            <div class="panel-body">
                @Html.ActionLink("Search Snippet by Language", "SearchByLanguage", "Languages", null, new { @class = "btn btn-default btn-lg" })
                <p></p>
                @Html.ActionLink("Search Snippet by Title", "SearchSnippet", "Snippets", null, new { @class = "btn btn-default btn-lg" })
            </div>
        </div>
    </div>
</div>
