@model Snippy.App.Models.ViewModels.LabelPageViewModel
@{
    ViewBag.Title = "SnippetsByLabel";
}

<div class="row">
    <div class="col-sm-10">
        <h2>Snippets By Label</h2>
    </div>
    <div class="col-sm-2">
        @Html.ActionLink("Go To Search By Label", "SearchByLabel", "Labels", null, new { @class = "btn btn-success" })
    </div>
</div>

<div class="row">
    @Html.DisplayFor(l => l.Label)
</div>
<div class="row">
    @Html.DisplayFor(l => l.Snippets)
</div>

