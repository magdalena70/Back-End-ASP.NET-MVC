@using System.Globalization;
@model SoftUni.Blog.App.Models.ViewModels.PostFullViewModel
@{
    ViewBag.Title = Model.Title;
}

<h2>@Model.Title</h2>
by @Model.Author on @Model.SentToDate.ToString("dd-MMM-yyyy hh:mm:ss", CultureInfo.InvariantCulture)

<p>@Model.Content</p>

@Html.ActionLink("Back to home", "Index", "Home", routeValues: null, htmlAttributes: new { @class = "btn btn-primary" })