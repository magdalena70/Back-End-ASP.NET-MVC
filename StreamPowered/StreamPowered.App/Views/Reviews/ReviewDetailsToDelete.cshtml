@using System.Globalization
@model StreamPowered.App.Models.ViewModels.ReviewDetailsViewModel

@{
    ViewBag.Title = "ReviewDetailsToDelete";
}

<div class="row">
    <h1 style="color: red;">Do you want to delete this review:</h1>
    <div class="col-sm-10 col-sm-offset-1">
        <div class="panel panel-primary">
            <div class="panel-heading">
                <h2>Review Details To Delete</h2>
            </div>
            <div class="panel-body">
                <p>Content:</p>
                <p><strong>@Model.Content</strong></p>
            </div>
            <div class="panel-footer">
                <p>
                    <span class="glyphicon glyphicon-user"></span>
                    <strong>@Model.Author</strong> on @Model.CreationTime.ToString("dd-MMM-yyyy hh:mm:ss", CultureInfo.InvariantCulture)
                </p>
                <p>on game <strong>@Model.GameTitle</strong></p>
            </div>
        </div>
    </div>
</div>
<div class="row">
    @Html.ActionLink("Delete", "DeleteReview", "Reviews", new { id = Model.Id }, new { @class = "btn btn-danger" })
    @Html.ActionLink("Cancel", "GameDetails", "Games", new { id = @Model.GameId }, new { @class = "btn btn-default" })
</div>
