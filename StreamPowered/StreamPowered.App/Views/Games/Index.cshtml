
@{
    ViewBag.Title = "Index";
}

<div class="row">
    <h2>All Games</h2>
    <ul class="pagination">
        @for (int page = 1; page <= ViewBag.TotalPages; page++)
        {
            string listItemClass = "";
            if (page == ViewBag.CurrentPage)
            {
                listItemClass = "active";
            }

            <li class="@listItemClass">
                @Html.ActionLink(page.ToString(), "Index", "Games", routeValues: new { page = page, count = 3 }, htmlAttributes: null)
            </li>
        }
    </ul>
</div>
<div class="row">
   <div class="col-sm-8 col-sm-offset-2">
        @Html.DisplayForModel()
    </div>
</div>
