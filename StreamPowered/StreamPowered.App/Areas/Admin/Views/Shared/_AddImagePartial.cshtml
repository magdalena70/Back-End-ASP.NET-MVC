
<div class="well">
    @using (Ajax.BeginForm("AddImage", "Images", new { id = Model.Id }, new AjaxOptions()
                            {
                                HttpMethod = "POST",
                                InsertionMode = InsertionMode.InsertAfter,
                                UpdateTargetId = "images",
                                OnSuccess = "onSuccessAddImage"
                            }))
    {
        @Html.AntiForgeryToken()
        <div class="form-horizontal">
            <div class="form-group">
                <input type="text" id="url" name="url" value="" class="form-control" placeholder="Image-Url"/>
            </div>
            <div class="form-group">
                <input type="submit" value="Add" class="btn btn-primary" />
            </div>
        </div>
    }
</div>


