@model StreamPowered.App.Models.ViewModels.TopFiveReviewsViewModel
<div class="well">
    @using (Ajax.BeginForm("Edit", "Reviews", new { id = Model.Id }, new AjaxOptions()
                            {
                                HttpMethod = "POST",
                                InsertionMode = InsertionMode.Replace,
                                UpdateTargetId = "review",
                                OnFailure = "onError"
                            }))
    {
        @Html.AntiForgeryToken()
        <div class="form-horizontal">
            <div class="form-group">
                <div class="col-sm-10">
                    @Html.EditorFor(model => model.Content, new { htmlAttributes = new { @class = "form-control" } })
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-offset-1 col-sm-10">
                    <input type="submit" value="Edit Content" class="btn btn-primary" />
                </div>
            </div>
        </div>
    }
</div>
