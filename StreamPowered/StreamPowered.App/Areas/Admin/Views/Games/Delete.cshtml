@model StreamPowered.Models.Game

@{
    ViewBag.Title = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="row">
    @Html.ActionLink("Back to List", "Index", "Games", null, new { @class = "btn btn-info" })
</div>
<div class="row">
    <h3 class="text-danger">Are you sure you want to delete this?</h3>
    <div class="col-sm-10 col-sm-offset-1">
        <h4>Game</h4>
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.Title)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Title)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.Description)
            </dt>
            <dd>
                <div class="well">@Html.DisplayFor(model => model.Description)</div>
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.SystemRequirements)
            </dt>
            <dd>
                <pre>@Html.DisplayFor(model => model.SystemRequirements)</pre>
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.Author)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Author.UserName)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.Genre)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Genre.Name)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.AverageRating)
            </dt>
            <dd>
                <mark>@Html.DisplayFor(model => model.AverageRating)</mark>
            </dd>
            <dt>
                Images count:
            </dt>
            <dd>
                <mark>@Html.DisplayFor(model => model.ImageUrls.Count)</mark>
            </dd>
            <dt>
                Reviews count:
            </dt>
            <dd>
                <mark>@Html.DisplayFor(model => model.Reviews.Count)</mark>
            </dd>
        </dl>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color">
                <input type="submit" value="Delete" class="btn btn-danger" />
                @Html.ActionLink("Cancel", "Details", "Games", new { id = Model.Id }, new { @class = "btn btn-info" })
            </div>
        }
    </div>

</div>
<div class="row">
    @Html.ActionLink("Back to List", "Index", "Games", null, new { @class = "btn btn-info" })
</div>
