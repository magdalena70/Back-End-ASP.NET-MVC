@model StreamPowered.Models.Image
@{
    ViewBag.Title = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="row">
    @Html.ActionLink("Back to List", "Index", "Games", null, new { @class = "btn btn-info" })
</div>
<div class="row">
    <h3 class="text-danger">Are you sure you want to delete this?</h3>
    <div class="col-sm-10 col-sm-offset-2 warning">
        <h4>Image</h4>
        <img src="@Model.Url" alt="img-@Model.Id" width="480" height="250" />
    </div>
    <div class="row">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color">
                <input type="submit" value="Delete" class="btn btn-danger" />
                @Html.ActionLink("Cancel", "Details", "Games", new { id = Model.Game.Id }, new { @class = "btn btn-info" })
            </div>
        }
    </div>
</div>

